    <!-- <view class="" style="background-color:#000000; height:100px"></view> -->
    <view class=" {{isMirror?'pg-mirror-vertical':''}}">
        <view class="margin-top text-center  text-xl   ">燕麦奶菜单</view>
        <view class="margin-top-xs text-center text-sm  text-gray">{{store.Name}}</view>

        <view class="padding" wx:for="{{list}}" wx:key="*this" wx:for-item="category" wx:for-index="index">
            <view class="cuIcon-titles"> {{category.category.cate_name}}</view> 
                
            <view class="margin-top flex justify-start"  style=" flex-wrap:wrap;" >
                <view class="  padding-xs radius product" style="flex-basis: 25%;"
                wx:for="{{category.products}}"  wx:for-item="item" wx:for-index="itemIndex" 
                catchtap="openDetail" data-categoryindex="{{index}}" data-itemindex="{{itemIndex}}"  >


                    <!-- <view class="text-xs text-center  text-gray  padding-tb-sm  {{isMirror?'pg-mirror-vertical':''}}">{{item.name}}</view> -->

                    <view class=" shadow shadow-warp bg-white">
                        <image src="{{item.imgs[0].src}}" mode="aspectFill" class="gif-black response block" style="height:150rpx"></image>            
                        <view class="padding-sm ">            
                            <view class="text-df name">{{item.name}}</view>
                            <view class="flex justify-between align-center ">
                                <view>
                                    <text class="text-price text-red text-bold text-xl"></text>
                                    <text class="text-red text-bold text-xxl margin-right-xs">{{item.price}}</text>
                                    <text class="cu-tag line-red sm radius" wx:if="{{product.priceDiscount}}">{{product.priceDiscount}}</text>
                                </view>
                                <view style="position:relative" >
                                <!-- <button class="cu-btn round line-yellow  text-sm" >选规格</button> -->
                                    <button class="cu-btn round line-yellow  text-sm" >选规格</button>
                                    <view class="cu-tag badge" wx:if="{{item.num>0}}">{{item.num}}</view>	
                                </view>
                            </view>
                            <view style="position:relative">
                                <text wx:for="{{product.markerList}}" wx:for-item="marker"  wx:key="*this"
                                class="cu-tag line-{{marker.color}} sm radius" wx:if="{{marker.text==''?false:true}}">{{marker.text}}</text>
                            </view>                    
                        </view>
                        
                       
                    </view>
                    
                </view>
                <!-- <view wx:if="{{list[i].length == 1}}"  class=" flex-sub margin-lr-sm radius shadow-lg" ></view> -->
            
            </view>
        </view>
    </view>

    <view class="pg-space-xxl"></view>

    <view class="padding " style="position: fixed; bottom:{{SpaceBottom}}px; left: 0; right: 0;background-color: rgba(255,255,255,0.8);" >
        <view class="flex justify-between"  >
            <view class="flex align-center">
                <view class="cu-avatar round lg " catchtap="openBill" > 
                    <view class="bg-white">
                        <image  src='{{config.icon.cart}}' class="cu-avatar  lg round bg-white" mode="aspectFill"></image>  
                        <view class="cu-tag badge">{{total.totalQuantity || 0}}</view>
                    </view>
                </view>
                <view class="content">
                    <view class="text-grey">
                        <view class="text-bold text-xl text-red">
                            <text class="text-price "></text>{{total.totalPrice || 0}}
                        </view>
                    </view>                
                </view>
            </view>
            <view class="">
            <button class='cu-btn margin-right-sm  lg' catchtap="switchMirror" >反转</button>	
                <button class='cu-btn round bg-red shadow-blur text-white shadow margin-right-sm' catchtap="toPay" disabled="{{check.isEmpty(order)}}">去结算</button>	
                <button class='cu-btn round bg-yellow shadow-blur text-white shadow margin-right-sm' catchtap="toList">订单列表</button>	
            </view>
        </view>
    </view>

    <!-- 详情选项 -->
    <view class="cu-modal {{showChoice?'show':''}} " >
        <view class="menu-dialog {{isMirror?'pg-mirror-vertical':''}}" style="position: absolute;top:120rpx;bottom:120rpx;left: 0;right: 0;">
            <scroll-view class="" scroll-y scroll-with-animation style="width: 100%;height: calc(100vh - 50px - 100px - 30px - {{CustomBar}}px)"> 
                <image src='{{currentItem.imgs[0].src}}' class="block " style="width:100%; height:150px" mode="widthFix"></image>
                <view class="padding-lr margin-top">
                    <view class="flex flex-start">
                        <text class="bg-gray radius  text-sm margin-right-sm padding-xs"
                            wx:for="{{currentItem.tags}}"  wx:key="*this"  wx:for-item="tag" wx:for-index="tagIndex">{{tag}}</text>	
                    </view>
                    <view class="radius text-sm text-left margin-top-sm">{{currentItem.shortDescription || "这是一个非常棒的设计"}}</view>			
                </view>

                <view class="padding-lr margin-top " wx:for="{{currentItem.attributes}}"  wx:key="*this" wx:for-item="att"  wx:for-index="attIndex">
                    <view class=" text-left margin-top-sm text-gray text-sm">{{att.productAttributeName}}</view>
                    <view class="flex flex-start flex-wrap margin-top-sm">	
                        <view class="text-sm text-center margin-right-sm margin-bottom-sm" wx:for="{{ att.attributeValues }}" wx:key="*this"  wx:for-item="value" wx:for-index="valueIndex">
                            <button class="cu-btn radius {{att.attributeValues[valueIndex].isSelect?'bg-yellow text-white' :'line-gray'}}"                     
                            catchtap="clickAtt"
                            data-attindex="{{attIndex}}"
                            data-valueindex="{{valueIndex}}"
                            >{{value.name}}
                            </button>		
                        </view>
                    </view>
                </view>
                <view class="pg-space-xxl"></view>
                <view class="pg-space-xxl"></view>
                <view class="pg-space-xxl"></view>
            </scroll-view>

            <view class="" style="position: absolute ;bottom: 0; left: 0;right: 0; ">                                     
                <view class="padding mask" >
                    <view class="flex justify-between align-center text-xxl">						
                        <view class=" ">
                            <text class="text-price text-red text-xxl text-bold"></text>
                            <text class="text-red text-xxl text-bold">{{ currentItem.price}}</text>
                            <text  hidden="{{order[key]?order[key].attDes == ''? true:false : true}}">
                                <text class="text-gray text-sm margin-left" >已选规格：</text>
                                <text class="text-sm">{{order[key]?  order[key].attDes:""}}	</text>	
                            </text>
                        </view>				
                        <view class="flex justify-between align-center">                        
                            <image src="{{config.icon.cut}}"  class="cu-avatar  bg-white" catchtap="cutItem" 	hidden="{{order[key]? false : true}}"></image>								
                            <text class="padding-lr-sm">{{ order[key].Quantity || 0 }}</text>	
                            <image src="{{config.icon.add}}"  class="cu-avatar  bg-white" catchtap="addItem"></image>
                        </view>						
                    </view>
                </view>
            </view>            
        </view>

        
        <view class=" text-center" style="position: absolute;{{ isMirror?'top:50rpx':'bottom:50rpx'}}; left: 0;right: 0;" >          
            <text class="cu-btn lg text-white text-xl line-white {{ isMirror?'pg-mirror-vertical':''}}" catchtap="closeShow">继续选择</text>
        </view>

        
        <view class=" text-center flex justify-between align-center padding" style="position: absolute;bottom: 0rpx; left: 0;right: 0;" wx:if="{{isMirror}}">          
            <view class="flex flex-start">
                <view class="padding-lr margin-top " wx:for="{{currentItem.attributes}}"  wx:key="*this" wx:for-item="att"  wx:for-index="attIndex">
                    <view class=" text-left margin-top-sm text-gray text-sm">{{att.productAttributeName}}</view>
                    <view class="flex flex-start flex-wrap margin-top-sm">	
                        <view class="text-sm text-center margin-right-sm margin-bottom-sm" wx:for="{{ att.attributeValues }}" wx:key="*this"  wx:for-item="value" wx:for-index="valueIndex">
                            <button class="cu-btn radius {{att.attributeValues[valueIndex].isSelect?'bg-yellow text-white' :'line-gray'}}"                     
                            catchtap="clickAtt"
                            data-attindex="{{attIndex}}"
                            data-valueindex="{{valueIndex}}"
                            >{{value.name}}
                            </button>		
                        </view>
                    </view>
                </view>
            </view>

            <!-- <view> -->
                
            <view class="flex justify-between align-center text-xxl">	
                <view>
                    <button class="cu-btn   text-white text-xl line-white margin-right" catchtap="closeShow">继续选择</button>	
                </view>				
                <view class=" margin-right">
                    <text class="text-price text-red text-xxl text-bold"></text>
                    <text class="text-red text-xxl text-bold">{{ currentItem.price}}</text>
                </view>				
                <view class="flex justify-between align-center">                        
                    <image src="{{config.icon.cut}}"  class="cu-avatar  " catchtap="cutItem" 	hidden="{{order[key]? false : true}}"></image>	
                    <text class="padding-lr-sm text-white">{{ order[key].Quantity || 0 }}</text>	
                    <image src="{{config.icon.add}}"  class="cu-avatar  " catchtap="addItem"></image>
                </view>	
                                    
            </view>
            <!-- </view> -->
        </view>

    </view>


    <view class="cu-modal padding-tb-xl {{ showOrder?'show':''}} " >
        <view class="menu-dialog {{isMirror?'pg-mirror-vertical':''}}" style=" position: relative;">
            <view class="flex justify-between align-center padding solid-bottom">
                <view class="action">
                    <button class="cu-btn bg-red round " catchtap="clearOrder">清空</button>
                </view>
                <view class="content text-bold">当前订单</view>
                <view class="action" catchtap="closeShow">
                    <text class="cuIcon-close text-red"></text>
                </view>
            </view>

            <view class="padding-lr  text-left margin-top">
                <text class="line-red text-bold">{{shopDiscount}}</text>
            </view>
            <view class="">
                <view class="flex align-start  padding-lr margin-bottom"wx:for="{{order}}" wx:key="*this" wx:for-item="item" wx:for-index="key">
                    <view class="action">
                        <image src='{{item.cover}}' class="cu-avatar radius xl  bg-gray margin-right-sm " mode="aspectFill"></image>
                    </view>
                    <view class="" style="width:100%">
                        <view class="text-black text-left">{{item.name}}</view>
                        <view class="text-gray  text-sm text-left" >
                            <text decode="{{true}}"  space="{{true}}"> {{item.attDes}} &nbsp;</text>
                        </view>
                        <view class="flex justify-between">
                            <view class="text-gray ">
                                <text class="text-price"></text>
                                <text class="text-red">{{item.total}}</text>
                            </view>
                            <view class="text-gray  flex justify-between align-center">
                                <image src="{{config.icon.cut}}"  class="cu-avatar sm " 
                                    catchtap="cutOrder"
                                    data-key="{{key}}"
                                    data-categoryindex="{{item.categoryIndex}}"
                                    data-itemindex="{{item.itemIndex}}"
                                    data-attindex="{{item.attIndex}}"
                                    data-valueindex="{{item.valueIndex}}"
                                ></image>
                                <text class="padding-lr-xs ">{{ order[key].Quantity || 0 }}</text>								
                                <image src="{{config.icon.add}}"  class="cu-avatar sm " 
                                    catchtap="addOrder"
                                    data-key="{{key}}"
                                    data-categoryindex="{{item.categoryIndex}}"
                                    data-itemindex="{{item.itemIndex}}"
                                    data-attindex="{{item.attIndex}}"
                                    data-valueindex="{{item.valueIndex}}"
                                ></image>                        
                            </view>
                        </view>
                    </view>
                </view>					
            </view>                
            <view class="padding flex  justify-end solid-top">            
                <view class="action">
                    <button class="cu-btn bg-yellow text-white round margin-left" catchtap="closeShow">确定</button>
                </view>
            </view>
        </view>
    </view>


    <view wx:if="{{showReLoad}}" class="flex justify-center" style="position: fixed; width: 750rpx; top: 50%;">
        <button catchtap="onInit"> 重新加载</button>
    </view>

    
