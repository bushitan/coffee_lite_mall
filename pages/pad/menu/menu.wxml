<page-meta 
    background-color="#000000"
    root-background-color="#000000"
    background-color-top="#000000"
    background-color-bottom="#000000"
    root-font-size="20px"
    page-orientation=""
></page-meta>

<view class="pad">
    <view class="pg-space-xxl"></view>

    <!-- <view class="margin-top"></view>
    <view class="ttt">字体：base  16px</view>
