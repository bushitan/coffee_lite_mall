}

.cu-item:after{border: none !important;}

.swiper_image{
    position: relative;
}
.swiper_mask{
    position: absolute;
    bottom:0;
}



.name{
    overflow: hidden;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
    box-orient: vertical;
    display: -webkit-box;
    display: box;

    line-height:30rpx;
    min-height:60rpx;
}