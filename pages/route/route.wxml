<!--pages/route/route.wxml-->
<view >
    <view class="pg-space-xxl"></view>
    <button class="cu-btn  radius margin-right" catchtap="clickTo">首页</button>
    <button class="cu-btn  radius margin-right" catchtap="toMenu">菜单</button>
    <button class="cu-btn  radius margin-right" catchtap="toOrder">去订单</button>
    <button class="cu-btn  radius margin-right" catchtap="toPay">去支付</button>
    <button class="cu-btn  radius margin-right" catchtap="toMy">我的</button>
    <button class="cu-btn  radius margin-right" catchtap="toList">订单列表</button>
    <button class="cu-btn  radius margin-right" catchtap="toDetail">订单详情</button>
    <button class="cu-btn  radius margin-right" catchtap="toItem">产品页面</button>
    <button class="cu-btn  radius margin-right" catchtap="toBrand">品牌专栏页面</button>
    
</view>

<view class="flex align-center nowarp " style="background-color:#000000;width: 100%; height: 100vh; ">
    <!-- <image class="cover" style="width: 100%; display: block;"
        src="{{config.route.image}}" 
        mode="widthFix"></image> -->

    <view class="flex justify-center " style="position: fixed; bottom: 20px;left: 0;right: 0;" >
        <button class="cu-btn  {{ config.route.btnClass || 'line-gray'}} radius" catchlongtap="clickTo">
            {{config.route.btnText || "点击进入"}}
        </button>
    </view>
</view>
